@model TAS_SIUKDWStore.Models.Message

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Bukutamu.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-horizontal">
        <h4>Isi Form Dibawah untuk Menambah Buku Tamu</h4>

        <hr />
       
        <div class="editor-field" style="display:none">
            @Html.DropDownList("UserId")
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ContentMessage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContentMessage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ContentMessage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="editor-field">
            @Html.HiddenFor(model => model.TimeMessage, new { @Readonly = true, @Value = DateTime.Now.Date.ToLongDateString() })
            @Html.ValidationMessageFor(model => model.TimeMessage)
        </div>
